<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Botty.All.App" parent="Theme.AppCompat">
        <item name="android:colorPrimary">@color/material_blue_gray_500</item>
        <item name="android:statusBarColor">@color/material_blue_gray_700</item>
        <item name="android:colorAccent">@color/material_blue_gray_200</item>
        <item name="android:colorEdgeEffect">@color/material_blue_gray_200</item>
        <item name="windowActionBar">false</item>
        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="Botty.Video.App" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/material_red_500</item>
        <item name="android:statusBarColor">@color/material_red_700</item>
        <item name="android:colorAccent">@color/material_red_200</item>
        <item name="android:colorEdgeEffect">@color/material_red_200</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Botty.Photo.App" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/material_cyan_500</item>
        <item name="colorPrimaryDark">@color/material_cyan_700</item>
        <item name="android:colorAccent">@color/material_cyan_200</item>
        <item name="android:colorEdgeEffect">@color/material_cyan_200</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
